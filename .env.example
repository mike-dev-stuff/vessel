OLLAMA_HOST=192.168.1.14
OLLAMA_PORT=11434
OLLAMA_MODEL=huihui_ai/qwen3-abliterated:14b-v2-q8_0

# ComfyUI (image generation)
COMFYUI_HOST=localhost
COMFYUI_PORT=8188
COMFYUI_WORKFLOW_PATH=workflows/default_workflow.json
IMAGE_PROMPT_PREFIX=
IMAGE_PROMPT_SUFFIX=
